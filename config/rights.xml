<?xml version="1.0"?>
<rights>
	<actions>
		<document name="rootfolder" />
		<document name="folder" />
		<document name="baseform" />
		<document name="form" />
		<document name="boolean" />
		<document name="date" />
		<document name="file" />
		<document name="group" />
		<document name="hidden" />
		<document name="list" />
		<document name="password" />
