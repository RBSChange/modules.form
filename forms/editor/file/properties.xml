<?xml version="1.0" encoding="UTF-8"?>
<panel>
	<section labeli18n="m.form.bo.general.general">
		<field name="label" />
		<field name="required" />
		<field name="helpText" />
		<field name="allowedExtensions" />
		<row>
			<rowlabel value=" " />
			<hbox>
				<toolbarbutton image="{IconsBase}/small/photo_scenery.png" label="${trans:m.form.bo.general.images,ucf,attr}" oncommand="var panel = document.getBindingParent(this); panel.documentEditor.setAllowedTypes(panel, 'allowedExtensions', 'image');" />
				<toolbarbutton image="{IconsBase}/small/document.png" label="${trans:m.form.bo.general.documents,ucf,attr}" oncommand="var panel = document.getBindingParent(this); panel.documentEditor.setAllowedTypes(panel, 'allowedExtensions', 'document');" />
				<toolbarbutton image="{IconsBase}/small/application.png" label="${trans:m.form.bo.general.all,ucf,attr}" oncommand="var panel = document.getBindingParent(this); panel.documentEditor.setAllowedTypes(panel, 'allowedExtensions', 'all');" />
			</hbox>
		</row>
		<field name="mediaFolder" />
	</section>
	<section labeli18n="m.form.bo.general.activation-conditions" class="activation-conditions">
		<field name="activationQuestion" type="dropdownlist" emptylabel="" nocache="true" />
		<field name="activationValue" />
	</section>
</panel>