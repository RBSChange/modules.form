<?xml version="1.0" encoding="UTF-8"?>
<panel>
	<section labeli18n="modules.form.bo.general.General">
		<field name="label" />
		<field name="required" />
		<field name="helpText" />
		<field name="allowedExtensions" />
		<row>
			<rowlabel value=" " />
			<hbox>
				<toolbarbutton image="{IconsBase}/small/photo_scenery.png" label="${transui:m.form.bo.general.Images,ucf,attr}" oncommand="var panel = document.getBindingParent(this); panel.documentEditor.setAllowedTypes(panel, 'allowedExtensions', 'image');"/>
				<toolbarbutton image="{IconsBase}/small/document.png" label="${transui:m.form.bo.general.Documents,ucf,attr}" oncommand="var panel = document.getBindingParent(this); panel.documentEditor.setAllowedTypes(panel, 'allowedExtensions', 'document');"/>
				<toolbarbutton image="{IconsBase}/small/application.png" label="${transui:m.form.bo.general.All,ucf,attr}" oncommand="var panel = document.getBindingParent(this); panel.documentEditor.setAllowedTypes(panel, 'allowedExtensions', 'all');"/>
			</hbox>
		</row>
		<field name="mediaFolder" />
	</section>
	<section labeli18n="modules.form.bo.general.Activation-conditions" class="activation-conditions">
		<field name="activationQuestion" type="dropdownlist" emptylabel="" nocache="true" />
		<field name="activationValue" />
	</section>
</panel>